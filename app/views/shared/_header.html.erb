<div id="top_header">
  <a href="<%= home_path %>" class="site_name"><h1><span class="nos">Nos </span><br></br>Recettes</h1></a>
</div>
<%= render 'shared/search' %>
<navigation>
  <div class="nav_background">
    <div class="nav_container">
      <ul>
        <% if current_user then %>
          <li><%= link_to 'Nouvelle Recette', new_recette_path %></li>
        <% end %>
        <% if user_is_admin? then %>
          <li><%= link_to 'Nouvelle Categorie', new_category_path %></li>
        <% end %>
        <li><%= link_to 'Recettes', recettes_path, :class => current_page?("recettes") %></li>
        <li><%= link_to 'Categories', categories_path, :class => current_page?("categories") %></li>
        <li><a href="mailto:info (at) nosrecettes (dot) ca">Contact</a></li>
        <% if !current_user then %>
          <li><%= link_to 'Connexion', new_user_session_path, :class => current_page?("connexion") %></li>
        <% else %>
          <li><%= link_to 'Deconnexion', destroy_user_session_path, :method => :delete %></li>
        <% end %>
      </ul>
    </div>
  </div>
</navigation>