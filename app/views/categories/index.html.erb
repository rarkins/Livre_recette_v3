<div id="intro">
	<h3>Liste des cat&eacute;gories</h3>
</div>
<div id="left">
	<table width="100%">
		<tr align="left">
			<th>Nom</th>
			<th></th>
			<th></th>
			<th></th>
		</tr>
		<tr>
			<td colspan="4">
			<hr />
			</td>
		</tr>
		<% @categories.each do |category| %>
		<tr align="left">
			<td><%= link_to category.nom, category %></td>
			<td><%= pluralize(nombre_recette_pour_category(category), "recette") %></td>
			<td> <% if user_is_admin? then %>
			<%= link_to 'Modifier', edit_category_path(category) %>
			<% end %> </td>
			<td><% if user_is_admin? then %>
			<%= link_to 'Effacer', category, method: :delete, data: { confirm: 'Etes-vous certain?' } %>
			<% end %> </td>
		</tr>
		<% end %>
	</table>

	<br />
</div>
<div id="right">
	<% if current_user then %>
	<p>
		Bonjour <b><%= current_user.username %></b>
	</p>
	<p><%= link_to 'Nouvelle Recette', new_recette_path %></p>
	<% end %>
	<% if user_is_admin? then %>
	<%= link_to 'Nouvelle Categorie', new_category_path %>
	<% end %>
</div>