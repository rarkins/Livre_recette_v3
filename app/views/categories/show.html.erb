<main class="contenu">
  <h3><%= @category.nom %></h3>

  <p id="notice">
    <%= notice %>
  </p>
  <header class="header">
    <% if user_is_admin? then %>
      <%= link_to 'Modifier', edit_category_path(@category), class: 'actions' %> |
    <% end %>
    <%= link_to 'Retour', categories_path, class: 'actions' %>
  </header>
  <section class="recettes_list">
    <% @recettes.each do |recette| %>
      <div class="recette">
        <p>
          <% if recette.photo %>
            <%= link_to(cl_image_tag(recette.photo.path, :transformation => {:width => 275, :height => 275, :crop => "fit"}), recette, target: '_blank') %>
          <% else %>
            <i class="fas fa-utensils fa-5x"></i>
          <% end %>
        </p>
        <p><%= link_to(recette.titre, recette, target: '_blank') %></p>
        <p><%= link_to get_username(recette[:user_id]), user_path(recette[:user_id]), class: 'user' %></p>
      </div>
    <% end %>
  </section>
</main>