<div id="intro">
	<h3><%= @category.nom %></h3>
</div>
<div id="left">
	<p id="notice">
		<%= notice %>
	</p>
	<table width="100%">
		<tr align="left">
			<th>Recettes</th><th>Auteur</th>
		</tr>
		<tr>
			<td colspan="2"></td>
		</tr>
		<% @recettes.each do |recette| %>
		<% p recette %>
		<tr>
			<td><%= link_to(show_recette_info(recette)[:titre], recette_path(recette) ) %></td>
			<td><%= link_to(get_username(show_recette_info(recette).user_id), user_path(show_recette_info(recette).user_id)) %></td>
		</tr>
		<% end %>
	</table>

</div>

<div id="right">
	<%= link_to 'Modifier', edit_category_path(@category) %> |
	<%= link_to 'Retour', categories_path %>
</div>