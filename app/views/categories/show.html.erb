<div id="content">
	<h3><%= @category.nom %></h3>

	<p id="notice">
		<%= notice %>
	</p>
	<table width="100%">
		<tr>
			<td colspan="3" align="center"> <% if user_is_admin? then %>
			<%= link_to 'Modifier', edit_category_path(@category) %> |
			<% end %>
			<%= link_to 'Retour', categories_path %> </td>
		</tr>
		<tr align="left">
			<th>Photo</th>
			<th>Recettes</th>
			<th>Auteur</th>
		</tr>
		<tr>
			<td colspan="3">
			<hr />
			</td>
		</tr>
		<% @recettes.each do |recette| %>
		<tr class="<%= get_row_color(@pos) %>">
			<td> <% if recette.photo then %>
			<%= link_to(cl_image_tag(recette.photo.path, { size: '125x125', crop: :fit }), "http://res.cloudinary.com/livre-recettes/image/upload/#{recette.photo.path}", target: :blank)%>
			<% end %> </td>
			<td><%= link_to(show_recette_info(recette)[:titre], recette_path(recette) ) %></td>
			<td><%= link_to(get_username(show_recette_info(recette).user_id), user_path(show_recette_info(recette).user_id)) %></td>
		</tr>
		<% @pos = @pos + 1 %>
		<% end %>
	</table>
</div>